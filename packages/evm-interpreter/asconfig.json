{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "sourceMap": true,
      "debug": true,
      "stackSize": 1000000
    },
    "release": {
      "outFile": "build/release.wasm",
      "textFile": "build/release.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": false,
      "stackSize": 1000000
    }
  },
  "options": {
    "bindings": "esm",
    "transform": ["json-as/transform"]
  }
}
